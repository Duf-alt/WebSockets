<ul id="productList">
  {{#each products}}
    <li data-id="{{this._id}}">
      <strong>{{this.title}}</strong> - ${{this.price}}
      <button class="delete-btn">ğŸ—‘ï¸ Eliminar</button>
    </li>
  {{/each}}
</ul>

<hr>

<h2>Agregar nuevo producto</h2>
<form id="addProductForm">
  <input type="text" name="title" placeholder="TÃ­tulo" required />
  <input type="number" name="price" placeholder="Precio" required />
  <button type="submit">Agregar</button>
</form>

<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io();

  const productList = document.getElementById("productList");
  const form = document.getElementById("addProductForm");

  // Render dinÃ¡mico de productos
  const renderProducts = (products) => {
    productList.innerHTML = "";
    products.forEach((p) => {
      const li = document.createElement("li");
      li.dataset.id = p._id;
      li.innerHTML = `
        <strong>${p.title}</strong> - $${p.price}
        <button class="delete-btn">ğŸ—‘ï¸ Eliminar</button>
      `;
      productList.appendChild(li);
    });
  };

  // Escucha actualizaciones desde el servidor
  socket.on("updateProducts", (products) => {
    renderProducts(products);
  });

  // Enviar nuevo producto
  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    const data = Object.fromEntries(new FormData(form));
    await fetch("/api/products", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(data),
    });
    form.reset();
  });

  // DelegaciÃ³n de eventos para eliminar producto
  productList.addEventListener("click", async (e) => {
    if (e.target.classList.contains("delete-btn")) {
      const id = e.target.closest("li").dataset.id;

      // ConfirmaciÃ³n antes de eliminar
      const confirmation = window.confirm("Â¿EstÃ¡s seguro de que deseas eliminar este producto?");
      if (confirmation) {
        await fetch(`/api/products/${id}`, { method: "DELETE" });
      }
    }
  });
</script>
